{
    "name": "vherus/package-bootstrap",
    "description": "Bootstrap for developing PHP>=7.2 packages.",
    "license": "MIT",
    "authors": [
        {
            "name": "Nathan King (vherus)",
            "role": "Developer",
            "email": "nathanking3590@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-4": {
            "Vherus\\Bootstrap\\": ["tests/", "src/"]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
